//@execute 0=42
def buffer = Array<byte>.new(64);
def rbuffer: Range<byte> = buffer;

layout S {
        +0      x: u32;
        +4      y: u32;
        +8     z: u32;
        =12;
}

def main(x: int) -> int {
	var p = Pointer.atContents(rbuffer);
	var r = CiRuntime.forgeRange<byte>(p, buffer.length);
        var r2 = r[3 ...];

        var s = Ref<S>.of(r);

        s.x = 0x00112233;
        s.y = 0x44556677;
        s.z = 0x8899aabb;

        if (rbuffer[0] != 0x33) return -1;
        if (rbuffer[1] != 0x22) return -1;
        if (rbuffer[2] != 0x11) return -1;

        if (r2[0] != 0x00) return -1;
        if (r2[1] != 0x77) return -1;
        if (r2[2] != 0x66) return -1;

        var s2 = Ref<S>.of(r[4 ...]);
        s2.x = 0x88776655u;
        if (s.y != s2.x) return -1;

	return 42;
}
